                                        <div class="col-sm-4">
                                          {{ form_widget(form.telephone, { 'attr': {'class': 'form-control'} }) }}
                                        </div>
                                    </div>   
                                <div class="form-group">
                                        <label class="col-sm-2 control-label no-padding-right" for="form-field-3">type Offre</label>
                                        <div class="col-sm-4">
                                          {{ form_widget(form. typeOffre, { 'attr': {'class': 'form-control'} }) }}
                                        </div>
                                    </div>
     <div class="form-group">
                                        <label class="col-sm-2 control-label no-padding-right" for="form-field-3">Tripadivisor</label>
                                        <div class="col-sm-4">
                                          {{ form_widget(form. tripadivisor, { 'attr': {'class': 'form-control'} }) }}
                                        </div>
                                    </div>
                                    <div   style="display: none;">

                                           {{ form_widget(form.etat, { 'value': '0' }) }}  
                                              {{ form_widget(form.etatOffre, { 'value': '0' }) }} 
                                    </div>



                                    <div class="form-group">
                                        <label class="col-sm-2 control-label no-padding-right" for="form-field-3"> Région</label>
                                        <div class="col-sm-4">
                                    {{ form_widget(form.region, { 'attr': {'class': 'form-control'} }) }} 
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-2 control-label no-padding-right" for="form-field-3"> Ville</label>
                                        <div class="col-sm-4">
                                        {{ form_widget(form.ville, { 'attr': {'class': 'form-control'} }) }}   
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <label class="col-sm-2 control-label no-padding-right" for="form-field-3">Maps</label>
                                        <div class="col-sm-4">
                                     {{ form_widget(form.maps, { 'attr': {'class': 'form-control'} }) }}   
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-2 control-label no-padding-right" for="form-field-3">Réduction</label>
                                        <div class="col-sm-4">
                                        {{ form_widget(form.reduction, { 'attr': {'class': 'form-control'} }) }}   
                                        </div>
                                    </div>
                                  

                                    <div class="form-group">
                                        <label class="col-sm-2 control-label no-padding-right" for="form-field-3"> Nombre Personne</label>
                                        <div class="col-sm-4">
                                        {{ form_widget(form.nbrePers, { 'attr': {'class': 'form-control'} }) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label no-padding-right" for="form-field-3"> Date Début</label>
                                        <div class="col-sm-4">
                                        {{ form_widget(form.dateDebut, { 'attr': {'class': 'form-control'} }) }}   
                                        </div>
                                    </div>
                                      <div class="form-group">
                                        <label class="col-sm-2 control-label no-padding-right" for="form-field-3"> Date Offre</label>
                                        <div class="col-sm-4">
                                        {{ form_widget(form.dateOffre, { 'attr': {'class': 'form-control'} }) }}   
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label no-padding-right" for="form-field-3"> Date Fin</label>
                                        <div class="col-sm-4">
                                         {{ form_widget(form.dateFin, { 'attr': {'class': 'form-control'} }) }}   
                                        </div>
                                    </div>
 


                                         <div class="form-group">
                                        <label class="col-sm-2 control-label no-padding-right" for="form-field-3"> Description</label>
                                        <div class="col-sm-6">
                                        {{ form_widget(form.description) }}
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-2 control-label no-padding-right" for="form-field-3"> Description2</label>
                                        <div class="col-sm-6">
                                         {{ form_widget(form.description2) }}
                                        </div>
                                    </div>


                                </div>
                               {{ form_rest(form) }} 
                                <div class="clearfix form-actions">
                                    <div class="col-md-offset-3 col-md-9">
                                        <button class="btn btn-info" type="submit">
                                            <i class="ace-icon fa fa-check bigger-110"></i>
                                            Valider
                                        </button>
                                        &nbsp; &nbsp; &nbsp;
                                        <button class="btn" type="reset">
                                            <i class="ace-icon fa fa-undo bigger-110"></i>
                                            Annuler
                                        </button>
                                    </div>
                                </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div><!-- /.main-content -->
</form> 


<script>
    var today = new Date();
    var dd = today.getDate();
    var mm = today.getMonth() + 1; //January is 0!

    var yyyy = today.getFullYear();
    if (dd < 10) {
        dd = '0' + dd
    }
    if (mm < 10) {
        mm = '0' + mm
    }
    var today = dd + '/' + mm + '/' + yyyy;
    document.getElementById("t1").value = today;

 document.getElementById("image1").value;=document.getElementById("image1").value;
 

</script>
