<form  action="{{ path('offre_modifier', { 'id': app.request.attributes.get("id") }) }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
                            <div class="box-body">
                                <div class="form-group">

  <div class="form-group">
                                        <label class="col-sm-2 control-label no-padding-right" for="form-field-3"></label>
                                         
                                         <div class="col-sm-6">
                                         
                                        <ul class="ace-thumbnails clearfix">

                                        {% for a in entities1 %}
                                        <li>
                                            
                                            <a href="{{ asset('upload/image/' ~ a.image) }}" data-rel="colorbox">
