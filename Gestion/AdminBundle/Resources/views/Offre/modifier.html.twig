{% extends "GestionAdminBundle::layoutadmin.html.twig" %}

{% block bodylayout  %}

<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="#">Accueil</a>
        </li>
        <li>
            <a href="#">Modifier Offre</a>
        </li>
    </ul><!-- /.breadcrumb -->
</div>
<div class="page-content">
    <div class="col-xs-12 col-sm-11 widget-container-col ui-sortable" style="min-height: 210px;">
